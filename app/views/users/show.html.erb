<p id="notice"><%= notice %></p>
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    </section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.posts.any? %>
      <h3> Post <%= @user.posts.count %></h3>
      <ol class="posts">
        <%= render @post %>
      </ol>
      <%= will_paginate @post %>
    <% end %>
</div>



