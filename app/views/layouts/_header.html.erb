<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "Blink Blink", root_path, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to t(".home"), root_path %></li>
            <li><%= link_to t(".help"), help_path %></li>
            <% if signed_in? %>
                <li><%= link_to t(".users"), users_path %></li>
                <li class="dropdown">
                    <a class="btn btn-secondary dropdown-toggle" href="" role="button" data-bs-toggle="dropdown" aria-expanded="false" >
                    <%= t(".account") %> <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><%= link_to t(".profile"), current_user %></li>
                        <li><%= link_to t(".setting"), edit_user_path(current_user) %></li>
                        <li class="divider"></li>
                        <li>
                            <%= link_to t(".log_out"), signout_path, method: :delete %>
                        </li>
                    </ul>
                </li>
            <% else %>
                <li><%= link_to t(".log_in"), signin_path %></li>
            <% end %>
            <li><%= link_to "English", locale:"en" %></li>
            <li><%= link_to "Tiếng Việt", locale:"vi" %></li>
            <li><%= link_to "日本語", locale:"ja" %></li>
          </ul>
        </nav>
      </div>
    </header>